<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.example.jorgeduarte.appmastersroom.MainActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="73dp"
        android:layout_height="55dp"
        android:layout_gravity="top|left"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        tools:onClick="postPeople" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="400dp"
        android:layout_height="709dp"
        app:srcCompat="@drawable/sala2"
        tools:layout_editor_absoluteX="-57dp"
        tools:layout_editor_absoluteY="-40dp" />

    <TextView
        android:id="@+id/textArduinoBright"
        android:layout_width="126dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:text="brigth"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:textColor="@color/White"/>

    <TextView
        android:id="@+id/textTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Temperature"
        app:layout_constraintLeft_toRightOf="@+id/textArduinoBright"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:textColor="@color/White"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="126dp"
        android:layout_height="111dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/brightness"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/thermometer"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp" />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="126dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/pressure"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textArduinoBright"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:text="textPressure"
        android:textColor="@color/White"
        android:layout_marginStart="75dp" />

    <TextView
        android:id="@+id/textHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@+id/textPressure"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:text="Humidity:"
        android:textColor="@color/White"
        android:layout_marginStart="21dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="126dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/airhumidity"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginStart="13dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="126dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/wifi"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="126dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/team"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/tvNoise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noise:"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="532dp" />

</android.support.constraint.ConstraintLayout>
