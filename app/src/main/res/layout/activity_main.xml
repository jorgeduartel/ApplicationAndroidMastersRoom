<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sala2"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/sala2"
        android:orientation="vertical"
        tools:context="com.example.jorgeduarte.appmastersroom.MainActivity"
        tools:ignore="ScrollViewSize">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_gravity="top|left"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-3dp"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="bottom|right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/countpeople4"
            tools:ignore="RtlHardcoded,UnknownIdInLayout"
            tools:onClick="postPeople" />



        <TextView
            android:id="@+id/textArduinoBright"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonBrightness"
            tools:text="brigth" />

        <TextView
            android:id="@+id/textTemperature"
            android:layout_width="125dp"
            android:layout_height="31dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textArduinoBright"
            app:layout_constraintTop_toBottomOf="@+id/buttonThermometer"
            tools:text="Temperature" />

        <Button
            android:id="@+id/buttonBrightness"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/brightness"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/brightness" />

        <Button
            android:id="@+id/buttonThermometer"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/thermometer"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toRightOf="@+id/buttonBrightness"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/thermometer" />


        <Button
            android:id="@+id/buttonPressur"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/pressure"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textArduinoBright"
            app:srcCompat="@drawable/pressure" />

        <TextView
            android:id="@+id/textPeople"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/buttonPeople"
            tools:text="People" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="24sp"
            android:text="@string/settings"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textNoise"
            app:layout_constraintTop_toBottomOf="@+id/buttonSettings"
            tools:text="Settings" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSpeedWifi"
            tools:text="SpeedWifi" />

        <TextView
            android:id="@+id/textNoise"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Noise"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonNoise" />

        <TextView
            android:id="@+id/textSpeedWifi"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSpeedWifi"
            tools:text="SpeedWifi" />

        <TextView
            android:id="@+id/textPressure"
            android:layout_width="126dp"
            android:layout_height="28dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPressur"
            tools:text="textPressure" />

        <TextView
            android:id="@+id/textHumidity"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textPressure"
            app:layout_constraintTop_toBottomOf="@+id/buttonHumidity"
            tools:text="Humidity:" />

        <Button
            android:id="@+id/buttonHumidity"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/airhumidity"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toRightOf="@+id/buttonPressur"
            app:layout_constraintTop_toBottomOf="@+id/buttonThermometer"
            app:srcCompat="@drawable/airhumidity" />

        <Button
            android:id="@+id/buttonSpeedWifi"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="59dp"
            android:background="@drawable/wifi"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPressur"
            app:srcCompat="@drawable/wifi" />

        <Button
            android:id="@+id/buttonNoise"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/noise_red"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/noise_red" />

        <Button
            android:id="@+id/buttonPeople"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="59dp"
            android:background="@drawable/team"
            android:onClick="sensorFactory"
            app:layout_constraintLeft_toRightOf="@+id/buttonSpeedWifi"
            app:layout_constraintTop_toBottomOf="@+id/buttonHumidity"
            app:srcCompat="@drawable/team" />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="229dp"
            android:background="@drawable/settings"
            app:layout_constraintLeft_toRightOf="@+id/buttonSpeedWifi"
            app:layout_constraintTop_toBottomOf="@+id/buttonHumidity"
            app:srcCompat="@drawable/settings" />



    </android.support.constraint.ConstraintLayout>
</ScrollView>