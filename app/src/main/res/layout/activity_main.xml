<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical"
        tools:context="com.example.jorgeduarte.appmastersroom.MainActivity">




        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="73dp"
            android:layout_height="55dp"
            android:layout_gravity="top|left"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="bottom|right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            tools:onClick="postPeople" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="421dp"
            android:layout_height="820dp"
            app:srcCompat="@drawable/sala2"
            tools:layout_editor_absoluteX="-61dp"
            tools:layout_editor_absoluteY="-40dp" />

        <TextView
            android:id="@+id/textArduinoBright"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageBrightness"
            tools:text="brigth" />

        <TextView
            android:id="@+id/textTemperature"
            android:layout_width="125dp"
            android:layout_height="31dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textArduinoBright"
            app:layout_constraintTop_toBottomOf="@+id/imageThermometer"
            tools:text="Temperature" />

        <ImageView
            android:id="@+id/imageBrightness"
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/brightness"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" />

        <ImageView
            android:id="@+id/imageThermometer"
            android:layout_width="126dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/thermometer"
            app:layout_constraintLeft_toRightOf="@+id/imageBrightness"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" />



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="126dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/pressure"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textArduinoBright"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/textPeople"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/imagePeople"
            tools:text="People" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="24sp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textNoise"
            app:layout_constraintTop_toBottomOf="@+id/imageSettings"
            tools:text="Settings" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageSpeedWifi"
            tools:text="SpeedWifi" />

        <TextView
            android:id="@+id/textNoise"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Noise"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageNoise" />

        <TextView
            android:id="@+id/textSpeedWifi"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageSpeedWifi"
            tools:text="SpeedWifi" />

        <TextView
            android:id="@+id/textPressure"
            android:layout_width="126dp"
            android:layout_height="28dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:text="textPressure" />

        <TextView
            android:id="@+id/textHumidity"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/textPressure"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:text="Humidity:" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="126dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/airhumidity"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/imageThermometer"
            android:layout_marginStart="13dp" />

        <ImageView
            android:id="@+id/imageSpeedWifi"
            android:layout_width="126dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/wifi"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="50dp" />

        <ImageView
            android:id="@+id/imageNoise"
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/noise_red" />

        <ImageView
            android:id="@+id/imagePeople"
            android:layout_width="126dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/team"
            app:layout_constraintLeft_toRightOf="@+id/imageSpeedWifi"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginStart="13dp" />

        <ImageView
            android:id="@+id/imageSettings"
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="229dp"
            app:layout_constraintLeft_toRightOf="@+id/imageSpeedWifi"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/settings" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>